<UserControl x:ConnectionId='1' x:Class="Infonet.CStoreCommander.UI.Controls.ViewHeading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">


    <StackPanel Orientation="Horizontal"
                Padding="0,26,0,16">

        <Button x:ConnectionId='2' Background="{x:Null}"
                Padding="0,0,17,0"
                Style="{StaticResource ButtonWithNoBorder}"
                                                           >

            <Image Source="/Images/UtilityIcons/backarrow.png"
                   Stretch="None" />

        </Button>
        <TextBlock x:ConnectionId='3'                                 
                   Margin="0,0,0,5"
                   FontWeight="ExtraLight"
                   VerticalAlignment="Center"
                   Foreground="{StaticResource LabelTextForegroundColor}"
                                                             />

    </StackPanel>
</UserControl>

