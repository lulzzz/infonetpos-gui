<Page x:ConnectionId='1' xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Infonet.CStoreCommander.UI.View"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ViewModel="using:Infonet.CStoreCommander.UI.ViewModel"
      xmlns:converters="using:Infonet.CStoreCommander.UI.Converter"
      x:Class="Infonet.CStoreCommander.UI.View.ExtendedSplashScreen"
      xmlns:controls="using:Infonet.CStoreCommander.UI.Controls"
      mc:Ignorable="d">

    <Grid x:ConnectionId='2'  x:Name="gdMainScreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="103*" />
            <RowDefinition Height="492*" />
            <RowDefinition Height="153*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="259*" />
            <ColumnDefinition Width="165*" />
            <ColumnDefinition Width="259*" />
        </Grid.ColumnDefinitions>

        <Popup x:ConnectionId='3' Grid.Column="1"
               Grid.Row="1"
               x:Name="confirmationPopup"
                                                                                                         >
            <controls:PopupWithTwoButtons x:ConnectionId='6'                                                                  
                                          BackgroundOverlay="{StaticResource DarkGray}"
                                                                                                                         
                                                                                                                                                    
                                                                                                                                                    
                                                                                                                                   
                                                                                                                                    />
        </Popup>


        <Popup x:ConnectionId='4' Grid.Column="1"
               Grid.Row="1"
               x:Name="ErrorPopup"
                                                                                                  >
            <controls:NotificationPopup x:ConnectionId='5'                                                                            
                                        BackgroundOverlay="{StaticResource DarkGray}"
                                                                                                                                       
                                                                                                                     
                                                                                                                />
        </Popup>
    </Grid>
</Page>

