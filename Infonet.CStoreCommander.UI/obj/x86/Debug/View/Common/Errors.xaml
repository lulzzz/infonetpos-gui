<Page x:ConnectionId='1' x:Class="Infonet.CStoreCommander.UI.View.Common.Errors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Infonet.CStoreCommander.UI.View.Common"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Infonet.CStoreCommander.UI.Controls"
      xmlns:controlLib="using:Infonet.CStoreCommander.ControlLib"
      mc:Ignorable="d">

    <Grid Padding="8,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <controls:ViewHeading x:ConnectionId='2' x:Uid="txtErrors"
                                                                                          />

        <Border Background="{StaticResource BackgroundColor1Light}"
                HorizontalAlignment="Stretch"
                Grid.Row="1"
                Margin="0,10,0,10">
            <ScrollViewer>
                <TextBlock x:ConnectionId='5' Padding="20"
                           HorizontalAlignment="Center"
                           FontSize="11"
                                                                             
                           Foreground="{StaticResource LabelTextForegroundColor}"
                           FontFamily="Consolas" />
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2"
              Background="{StaticResource BackgroundColor2}"
              Padding="0,10,0,0">
            <controlLib:GenericButton x:ConnectionId='3' x:Uid="Clear"
                                                                                                    
                                                                                                
                                      HorizontalAlignment="Left"
                                      BottomBackGroundColor="{StaticResource ButtonBottomColor}"
                                      Width="140" />
            <controlLib:GenericButton x:ConnectionId='4' x:Uid="print"
                                                                                                    
                                                                                           
                                      HorizontalAlignment="Right"
                                      BottomBackGroundColor="{StaticResource ButtonBottomColor}"
                                      Width="140" />
        </Grid>
    </Grid>
</Page>

