<Page x:ConnectionId='1' x:Class="Infonet.CStoreCommander.UI.View.PumpOptions.Fuel_Pricing.PricesToDisplay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Infonet.CStoreCommander.UI.View.PumpOptions.Fuel_Pricing"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controlLib="using:Infonet.CStoreCommander.ControlLib"
      xmlns:triggers="using:WinRT.Triggers"
      mc:Ignorable="d">
    <triggers:Interactions.Triggers>
        <triggers:EventTrigger EventName="Loaded">
            <triggers:InvokeCommandAction x:ConnectionId='2'                                                              
                                          PassEventArgsToCommand="False" />
        </triggers:EventTrigger>
    </triggers:Interactions.Triggers>

    <Page.Resources>
        <Style TargetType="ComboBox"
               BasedOn="{StaticResource ComboBox}">
            <Setter Property="FontSize"
                    Value="11" />
            <Setter Property="FontSize"
                    Value="11" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource BackgroundColor1Light}" />
            <Setter Property="Foreground"
                    Value="{StaticResource LabelTextForegroundColor}" />
            <Setter Property="Width"
                    Value="165" />
            <Setter Property="VerticalAlignment"
                    Value="Stretch" />
            <Setter Property="Margin"
                    Value="0,0,0,15" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
        </Style>
    </Page.Resources>
    <Grid Padding="20,0,20,0" Background="{StaticResource BackgroundColor1Light}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <ComboBox x:ConnectionId='13' x:Uid="cbGrade"
                      Margin="20,0,0,0"
                      BorderThickness="1"
                      Style="{StaticResource ComboBox}"
                                                                                  
                                                                                   
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>

            <ComboBox x:ConnectionId='14' x:Uid="cbTier"
                      Margin="20,0,0,0"
                      BorderThickness="1"
                      Grid.Column="1"
                      Style="{StaticResource ComboBox}"
                                                                                 
                                                                                  
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>

            <ComboBox x:ConnectionId='15' x:Uid="cbLevel"
                      Margin="20,0,20,0"
                      BorderThickness="1"
                      Grid.Column="2"
                      Style="{StaticResource ComboBox}"
                                                                                  
                                                                                   
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>
        </Grid>

        <Grid Grid.Row="1"
              Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <ComboBox x:ConnectionId='10' BorderThickness="1"
                      Margin="20,0,0,0"
                      Style="{StaticResource ComboBox}"
                                                                                  
                                                                                   
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>

            <ComboBox x:ConnectionId='11' BorderThickness="1"
                      Grid.Column="1"
                      Margin="20,0,0,0"
                      Style="{StaticResource ComboBox}"
                                                                                 
                                                                                  
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>

            <ComboBox x:ConnectionId='12' BorderThickness="1"
                      Grid.Column="2"
                      Margin="20,0,20,0"
                      Style="{StaticResource ComboBox}"
                                                                                  
                                                                                   
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>
        </Grid>

        <Grid Grid.Row="2"
              Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="34*" />
                <ColumnDefinition Width="41*" />
                <ColumnDefinition Width="41*" />
            </Grid.ColumnDefinitions>

            <ComboBox x:ConnectionId='7' BorderThickness="1"
                      Margin="20,0,0,0"
                      Style="{StaticResource ComboBox}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                                                                                  
                                                                                   
                                                                                       
                      Grid.ColumnSpan="2">
            </ComboBox>

            <ComboBox x:ConnectionId='8' BorderThickness="1"
                      Grid.Column="2"
                      Margin="20,0,0,0"
                      Style="{StaticResource ComboBox}"
                                                                                 
                                                                                  
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>

            <ComboBox x:ConnectionId='9' BorderThickness="1"
                      Grid.Column="3"
                      Margin="20,0,20,0"
                      Style="{StaticResource ComboBox}"
                                                                                  
                                                                                   
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>
        </Grid>

        <Grid Grid.Row="3"
              Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <ComboBox x:ConnectionId='4' BorderThickness="1"
                      Margin="20,0,0,0"
                      Style="{StaticResource ComboBox}"
                                                                                  
                                                                                   
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>

            <ComboBox x:ConnectionId='5' BorderThickness="1"
                      Grid.Column="1"
                      Margin="20,0,0,0"
                      Style="{StaticResource ComboBox}"
                                                                                 
                                                                                  
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>

            <ComboBox x:ConnectionId='6' BorderThickness="1"
                      Grid.Column="2"
                      Margin="20,0,20,0"
                      Style="{StaticResource ComboBox}"
                                                                                  
                                                                                   
                                                                                       
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            </ComboBox>
        </Grid>

        <Grid Grid.Row="4"
              VerticalAlignment="Bottom">
            <controlLib:GenericButton x:ConnectionId='3' x:Name="btnSave"
                                      x:Uid="btnSaveInPricesToDisplay"
                                      BottomBackGroundColor="{StaticResource ButtonBottomConfirmationColor}"
                                      HorizontalAlignment="Right"
                                                                                                   
                                      Margin="0,0,20,20"
                                      Width="140" />
        </Grid>
    </Grid>
</Page>

